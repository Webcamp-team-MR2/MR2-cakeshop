<h2 class = "category"><%= params[:search] + "の検索結果" %></h2>
<% @items.each do |item| %>
<div class = "col-md-3">
  <%= attachment_image_tag item, :image, size: "200x200", format: 'jpeg', class: "img", fallback: "no_image.jpg" %><br>
  <%= link_to item_path(item) do %>
  <h4 class = "name"><%= item.name %></h4><br>
  <% end %>
  <h4 class = "price">¥<%= item.price %>  税抜</h4>
</div>
  <% end %>
