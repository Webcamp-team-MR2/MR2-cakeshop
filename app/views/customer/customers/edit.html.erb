<%= render 'layouts/customer.error_messages', customer: current_customer %>

<h1>会員編集画面</h1>
  <div class = col-md-5>
    <h4>登録情報編集</h4>
    <%= link_to "退会する", customers_with_draw_path, class:"btn btn-danger",style:"margin-right: 30px; margin-bottom: 10px;"%>
    <%= form_for (current_customer) do |f| %>
    <table class="table table-bordered">
      <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
      </tr>
      <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
      </tr>
      <tr>
          <th>電話番号</th>
          <td><%= f.text_field :tel %></td>
      </tr>
      <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
      </tr>
      <tr>
    </table>
    <%= f.submit "編集内容を保存する", class:"btn btn-primary center-block",style:"margin-bottom: 10px;"%>
    <% end %>
  </div>