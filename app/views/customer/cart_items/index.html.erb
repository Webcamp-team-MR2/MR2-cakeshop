<h3>ショッピングカート</h3>
<table class="table">
	<tr>
		<th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th></th>
	</tr>
	<% @cart_items.each do |cart_item| %>
	<tr>
		<td><%= cart_item.item.name %></td>
		<td><%= attachment_image_tag cart_item.item, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
		<td>%= cart_item.price %></td>
	</tr>
	<% end %>
</table>



	<% @cart_items.each do |cart_item| %>
	<p>Item Name</p>
	<%= cart_item.item.name %>
	<% end %>