<div class = "col-md-offset-2">
<h2>購入情報入力</h2>
  <%= form_tag(cart_items_confirm_path, method: :get) do %>
  <div class="col-md-6">
   <h3>支払方法</h3>
    <label>
		 <%= radio_button_tag :pay_method, "0" %> クレジットカード
	  </label><br>
	  <label>
	  	<%= radio_button_tag :pay_method, "1" %> 銀行振込
	  </label>
	</div>

	  <div class="col-md-4">
	  	<div>
		   <h3>お届け先</h3>
		 	 <label>
		 		<%= radio_button_tag :name, "0"  %> 自身の住所
		 	 </label><br>
		 	 〒<%= @customer.postal_code + @customer.address %><br>
		 	 <%= @customer.last_name + @customer.first_name%><br><br>
		  </div>

		  <div>
		 	 <label>
		 		<%= radio_button_tag :name, "1"  %> 登録済み住所から選択
		 	 </label><br>
		 	 <%= select_tag :address_id, options_for_select(
		 	 	@addresses.map{|address| [address.postal_code_address_full_name, address.id]}) %>
		  </div><br>

		  <div>
		   <label>
		  	<%= radio_button_tag :name, "2"  %> 新しいお届け先
		   </label><br>
		   郵便番号<%= text_field_tag :postal_code %>ハイフンなし<br>
		   住所　　<%= text_field_tag :address %><br>
		   宛名　　<%= text_field_tag :full_name %><br><br>
		  </div>
		</div>
</div>
<div class = "col-md-12">
		<div class = "btnbtn">
		   <%= submit_tag '確認画面へ進む', class: 'btn btn-primary btn-lg' %>
	  </div>
	<% end %>
</div>
