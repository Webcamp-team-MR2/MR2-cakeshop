      <div class = col-lg-10>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
              </tr>
          </thead>
<% @orders.each do |order|%>
          <tr>
          <td><%= order.created_at.to_s(:datetimeday_jp) %></td>
          <td><%= order.postal_code %>
          <%= order.address %>
          <%= order.full_name %></td>
          <td><%= order.order_items[0].item.name%></td>
          <td><%= order.total_price %></td>
          <td><%= order.order_status %></td>
          <td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %>
          </td>
          </tr>
		    <% end %>
      </table>
    </div>