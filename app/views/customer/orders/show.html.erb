<table class="table table-bordered">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tr>
           <td><%= @order.created_at %></td>
            <td><%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.full_name %></td>
            <td><%= @order.pay_method %></td>
            <td><%= @order.order_status %></td>
          </tr>
      </table>

<h3>請求情報</h3>
<table class="table table-bordered">
          <thead>
            <tr>
              <th>商品合計</th>
              <th>配送料</th>
              <th>ご請求額</th>
              </tr>
          </thead>
          <tr>
            <td><%= @order.total_price %></td>
            <td><%= @order.shipping_fee %></td>
            <td><%= @order.total_price %></td>
          </tr>
      </table>

<h3>注文内容</h3>
<table class="table table-bordered">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
              </tr>
          </thead>
          <% @order_items.each do |order_item|%>
          <tr>
           <td><%= order_item.item.name %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.count %></td>
            <td><%= order_item.count*order_item.price %></td>
          </tr>
          <% end %>
      </table>