<p style = "font-size: 30px; margin: 10px 20px;">注文履歴詳細</p>

<div class = "col-md-6">
  <h3>注文情報</h3>
  <table class="table table-bordered">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.to_s(:datetimeday_jp) %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.full_name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.pay_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
  </table>
</div>
<div class = "col-md-3">
  <h3>請求情報</h3>
  <table class="table table-bordered">
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_price %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_fee %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_price %></td>
    </tr>
  </table>
</div>
<div class = "col-md-7">
<h3>注文内容</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
        </tr>
    </thead>
    <% @order_items.each do |order_item|%>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.price %></td>
      <td><%= order_item.count %></td>
      <td><%= order_item.count*order_item.price %></td>
    </tr>
    <% end %>
  </table>
</div>