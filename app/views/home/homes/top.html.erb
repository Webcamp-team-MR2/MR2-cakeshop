<% @items.each do |item| %>
<div class = "col-md-3" style="background-color:red;">
  <%= attachment_image_tag item, :image, size: "200x200", format: 'jpeg', class: "img", fallback: "no_image.jpg" %><br>
  <%= link_to item_path(item) do %>
  <i><%= item.name %></i><br>
  <% end %>
  <i>¥<%= item.price %>  税抜</i>
</div>
  <% end %>