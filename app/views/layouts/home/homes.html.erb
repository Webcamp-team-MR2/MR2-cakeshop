  <head>
    <title>Mr2Cakeshop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header>
  <div class="container-fluid" style="height: 70px; background-color: yellow;">
    <div class="row" style="height: 70px;">
      <div class="col-md-3" style="text-align: left;">
        <h1 style = "color: red; font_size: 30px; padding: auto;">ながのCAKE</h1>
      </div>
        <nav class="col-md-9" style = "text-align: right;">
          <% if customer_signed_in? %>
            <h3>
            <%= link_to "トップページ", root_path %>

            <%= link_to "ながのCAKEとは??", homes_about_path %>

            <%= link_to "マイページ", customer_path(current_customer) %>

            <%= link_to "カート", cart_items_path %>

            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </h3>
            <% else %>
            <h3>
            <%= link_to "トップページ", root_path %>

            <%= link_to "ながのCAKEとは??", homes_about_path %>

            <%= link_to "新規登録", new_customer_registration_path %>

            <%= link_to "ログイン", new_customer_session_path, class:"btn btn-default" %>
            </h3>
          <% end %>
        </nav>
    </div>
  </div>
</header>
<body>
  <div class="container-fluid">
    <div class="row">
      <select name="area" class = "pull-left">
      <option value="none">ジャンル検索</option>
      <option value="aoba">青葉区</option>
      <option value="miyagino">宮城野区</option>
      <option value="wakabayashi">若林区</option>
      <option value="izumi">泉区</option>
      <option value="taihaku">太白区</option>
      </select>
      <%= yield %>
    </div>
  </div>
</body>
<footer>
  <div class = "col-lg-12" style = "background-color: yellow; text-align: right; color: red; height: 70px; font-size: 30px; line-height: 70px;">
  訪問して下さりありがとうございます!!
  </div>
</footer>
