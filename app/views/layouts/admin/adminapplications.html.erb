<!DOCTYPE html>
<html>
    <head>
        <title>Mr2Cakeshop</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track':
        'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid"></div>
            <h2 class="navbar-brand" href="#">
                <%= link_to "ながのCAKE", admin_customer_top_path %>
            </h2>
            <ul class="nav navbar-nav navbar-right">
                <% if admin_signed_in? %>
                    <li>
                        <%= link_to "商品一覧", admin_items_path %>
                    </li>
                    <li>
                        <%= link_to "会員一覧", admin_customers_path %>
                    </li>
                    <li>
                        <%= link_to "注文履歴一覧", admin_orders_path(page: 1)%>
                    </li>
                    <li>
                        <%= link_to "ジャンル管理", admin_categories_path %>
                    </li>
                    <li>
                        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                    </li>
                    <p></p>
                    <div class="searchwindow">
                        <%= form_with(url: admin_search_path, method: :post, local: true) do %>
                        <%= text_field_tag :search %>
                        <%= submit_tag 'Search' %></div>
                <% end %>

            </ul>
        <% end %>
    </nav>

    <%= yield %>
</body>
</html>