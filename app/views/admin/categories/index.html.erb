
       <div class="col-md-8">
    <h1>ジャンル追加・一覧画面</h1>

    <div class="field">
        <%= form_for(@category, url:admin_categories_path) do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :sweets_name %>
        <% %w(有効 無効).each.with_index do |ingredient,i| %>
            <label>
                <%= check_box_tag 'category[ingredients][]',
                ingredient,false,id:"category_ingredients_#{i}"%>
                <%= ingredient %>
            </label>
        <% end %>
            <%= f.submit '追加', class:"btn btn-primary glyphicon
            glyphicon-wrench btn-sm" %>
        <% end %>
</div>
</div>
</div>