<h1>Admin::Items#index</h1>

<%= link_to "商品新規登録", new_admin_item_path %>

<% @items.each do |item| %>
<%= item.id%>
<%= attachment_image_tag item,:image,:fill,100,100,format: 'jpeg'%>
<%= item.name%>
<%= item.price%>
<%= item.category.sweets_name%>
<%= item.description%>
<%= link_to "商品編集", edit_admin_item_path(item) %>
<% end %>