<h3>商品新規登録画面</h3>

  <%= form_for (@item), url:'/admin/items' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%><br>
  <%= f.label :image %>
  <%= f.attachment_field :image %><br>
  <%= f.label :category %>
  <%= f.text_field :category_id %><br>
  <%= f.label :price %>
  <%= f.text_field :price%><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>

<%= f.submit 'Create Item'%>
<%end%>