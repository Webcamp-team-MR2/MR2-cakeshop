<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<h1>会員編集画面</h1>
    <%= form_for (@customer), url:admin_customer_path do |f| %>
    <table class="table table-fover">
    <tr>
        <th>顧客ID</th>
        <td><%= @customer.id %></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= f.text_field :tel %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <th>会員ステータス</th>
        <td>
            <label><%= f.radio_button :customer_status, true %>
                有効</label>
        </td>
        <td>
            <label>
                <%= f.radio_button :customer_status, false %>
                退会済み</label>
        </td>
    </tr>
</table>
<%= f.submit '変更を保存する', class:"btn btn-primary glyphicon glyphicon-wrench
btn-lg" %>
<% end %>