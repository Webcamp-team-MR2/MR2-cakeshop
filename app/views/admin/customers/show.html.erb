<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<h2>会員詳細</h2>
<table class="table table-fover">
    <tr>
        <th>顧客ID</th>
        <td><%= @customer.id %></td>
        <td>
            <% if @customer.customer_status == true %>
            <p>有効</p>
            <% else %>
            <p>退会済み</p>
            <% end %>
        </td>
    </tr>
    <tr>
        <th>氏名</th>
        <td><%= @customer.last_name + @customer.first_name %></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= @customer.tel %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
</table>

<%= link_to '編集する', edit_admin_customer_path(@customer), class:"btn btn-primary glyphicon glyphicon-wrench btn-lg" %>
<%= link_to '注文履歴一覧を見る',admin_orders_path(page: 3,customer_id: @customer.id),class:"btn btn-primary glyphicon btn-lg" %>